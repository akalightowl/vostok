///////////////////////////////////////////////////////////////////////////////
// Buttons
///////////////////////////////////////////////////////////////////////////////

btn--border-radius--top-left = 6px
btn--border-radius--top-right = 6px
btn--border-radius--bottom-left = 6px
btn--border-radius--bottom-right = 6px
btn--background = color-brand--lightest
btn--background--hover = color-brand--lighten
btn--background--active = color-brand--light
btn--padding--v = .5rem
btn--padding--h = 1rem
btn--padding--v--big = 1rem
btn--padding--h--big = 2rem
btn--font-size = .8rem
btn--font-family = text--font-family
btn--font-weight = text--font-weight--bold
btn--letter-space = 2px
btn--color = color-white
btn--transform = uppercase

///////////////////////////////////////////////////////////////////////////////
// Icons
///////////////////////////////////////////////////////////////////////////////

icon-size--small = .9rem
icon-size--base = 2rem
icon-size--big = 4rem
icon-size--huge = 6rem

///////////////////////////////////////////////////////////////////////////////
// Other
///////////////////////////////////////////////////////////////////////////////

times--elements--speed = .38s ease-in-out
times--elements = .68s ease-in-out
max-width = 75rem + padding--big* 2
border-radius = 6px
border-radius--big = 9px
box-shadow = 0 0 50px rgba(color-gray--darkest, .48)
scale--click = .97


