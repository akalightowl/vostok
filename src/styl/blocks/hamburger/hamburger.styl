@import "../../_variables.styl"

.hamburger
  display none
  position relative
  width 18px
  height 14px
  align-self center
  justify-self end
  cursor pointer
  margin-bottom 4px
  z-index 1

  @media screen and (max-width mq-desktop--start)
    display block

  &__line
    display block
    position absolute
    opacity 1
    transform rotate(0deg)
    transition .25s ease-in-out
    border-radius 8px
    width 100%
    height 1px
    background color-main

  &__line--contrast
    background-color color-white

  &__line:nth-child(1)
    top 0
    transform-origin left center

  &__line:nth-child(2)
    top 49%
    transform-origin left center

  &__line:nth-child(3)
    bottom 0
    transform-origin left center

  &__line--mobile--menu-open
    background-color color-white

  &__line--mobile--menu-open:nth-child(1)
    top 0
    right 0
    transform rotate(45deg)

  &__line--mobile--menu-open:nth-child(2)
    top 0
    right 0
    transform rotate(45deg)

  &__line--mobile--menu-open:nth-child(3)
    top 13px
    right 0
    transform rotate(-45deg)


